@model ContactManagerApp.Models.Trip

<h2>@ViewData["Subhead"]</h2>
<form asp-action="AddStep2" method="post">
    <!-- Hidden fields to preserve data -->
    <input type="hidden" asp-for="Destination" />
    <input type="hidden" asp-for="StartDate" />
    <input type="hidden" asp-for="EndDate" />
    <input type="hidden" asp-for="Accommodation" />
    
    <div class="form-group">
        <label asp-for="AccommodationPhone"></label>
        <input asp-for="AccommodationPhone" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="AccommodationEmail"></label>
        <input asp-for="AccommodationEmail" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Next</button>
    <a asp-action="Cancel" class="btn btn-secondary">Cancel</a>
</form>